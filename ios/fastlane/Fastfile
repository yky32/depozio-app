# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API authentication
    if ENV["APP_STORE_CONNECT_API_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        duration: 1200, # 20 minutes
        in_house: false
      )
    end

    # Build using Flutter's build ipa command with proper export options
    team_id = ENV["TEAM_ID"] || "3G34999H3A"
    
    # Create export_options.plist in ios directory
    export_options_path = File.expand_path('../export_options.plist', __dir__)
    
    # Create export_options.plist with App Store signing
    File.write(export_options_path, <<~PLIST
      <?xml version="1.0" encoding="UTF-8"?>
      <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
      <plist version="1.0">
      <dict>
        <key>method</key>
        <string>app-store</string>
        <key>signingStyle</key>
        <string>automatic</string>
        <key>teamID</key>
        <string>#{team_id}</string>
        <key>uploadBitcode</key>
        <false/>
        <key>uploadSymbols</key>
        <true/>
        <key>compileBitcode</key>
        <false/>
      </dict>
      </plist>
    PLIST
    )
    
    # Build IPA using Flutter (it will use the export_options.plist)
    project_root = File.expand_path('../..', __dir__)
    sh("cd #{project_root} && flutter build ipa --release --export-options-plist=ios/export_options.plist")
    
    # Find and copy the generated IPA
    ipa_path = Dir.glob("#{project_root}/build/ios/ipa/*.ipa").first
    
    if ipa_path.nil? || !File.exist?(ipa_path)
      # Try alternative location
      ipa_path = Dir.glob("#{project_root}/build/ios/*.ipa").first
    end
    
    if ipa_path.nil? || !File.exist?(ipa_path)
      UI.user_error!("Could not find IPA file. Build may have failed. Check Flutter build logs above.")
    end
    
    # Copy to build directory
    FileUtils.mkdir_p("./build")
    FileUtils.cp(ipa_path, "./build/Depozio.ipa")
    UI.success("IPA created successfully at ./build/Depozio.ipa")

    # Upload to TestFlight
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      groups: ENV["TESTFLIGHT_GROUPS"]&.split(",") || ["Internal Testers"], # Change this to your TestFlight group name
      api_key: api_key
    )

    # Optional: Add release notes
    # changelog = ENV["CHANGELOG"] || "Bug fixes and improvements"
    # upload_to_testflight(
    #   changelog: changelog
    # )
  end

  desc "Build app only (without uploading)"
  lane :build do
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        signingStyle: "automatic"
      },
      output_directory: "./build",
      output_name: "Depozio.ipa",
      clean: true
    )
  end

  desc "Upload existing build to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false
    )
  end
end

