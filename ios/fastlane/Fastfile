# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API authentication
    if ENV["APP_STORE_CONNECT_API_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        duration: 1200, # 20 minutes
        in_house: false
      )
    end

    team_id = ENV["TEAM_ID"] || "3G34999H3A"
    
    # Use Match to sync certificates and provisioning profiles (recommended for CI/CD)
    match_success = false
    if ENV["MATCH_GIT_URL"]
      UI.message("Syncing certificates and provisioning profiles with Match...")
      begin
        match(
          type: "appstore",
          app_identifier: "com.depozio",
          readonly: true, # In CI/CD, only read existing certificates/profiles
          api_key: api_key
        )
        match_success = true
        UI.success("✓ Match sync successful - certificates and profiles ready")
      rescue => e
        UI.important("⚠ Match sync failed: #{e.message}")
        UI.important("Run 'fastlane match appstore' locally first to initialize Match")
        UI.important("See MATCH_SETUP.md for detailed instructions")
      end
    else
      UI.important("⚠ Match not configured")
      UI.important("For reliable CI/CD builds, set up Match:")
      UI.important("1. Create a private git repo for certificates")
      UI.important("2. Run 'fastlane match appstore' locally")
      UI.important("3. Add MATCH_GIT_URL to GitHub Secrets")
      UI.important("See MATCH_SETUP.md for details")
    end
    
    # If Match failed, try to continue with automatic signing (may not work in CI/CD)
    unless match_success
      UI.important("Attempting build with automatic signing (may fail in CI/CD)...")
    end
    
    # Create export_options.plist with App Store signing
    export_options_path = File.expand_path('../export_options.plist', __dir__)
    File.write(export_options_path, <<~PLIST
      <?xml version="1.0" encoding="UTF-8"?>
      <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
      <plist version="1.0">
      <dict>
        <key>method</key>
        <string>app-store</string>
        <key>signingStyle</key>
        <string>automatic</string>
        <key>teamID</key>
        <string>#{team_id}</string>
        <key>uploadBitcode</key>
        <false/>
        <key>uploadSymbols</key>
        <true/>
        <key>compileBitcode</key>
        <false/>
      </dict>
      </plist>
    PLIST
    )
    
    # Use Fastlane's build_app - it handles the signing better
    UI.message("Building and exporting IPA with App Store signing...")
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        signingStyle: "automatic",
        teamID: team_id
      },
      output_directory: "./build",
      output_name: "Depozio.ipa",
      clean: true,
      silent: false,
      include_bitcode: false,
      xcargs: match_success ? "CODE_SIGN_STYLE=Automatic DEVELOPMENT_TEAM=#{team_id}" : "-allowProvisioningUpdates CODE_SIGN_STYLE=Automatic DEVELOPMENT_TEAM=#{team_id}" # Use Match certificates if available, otherwise try automatic
    )

    # Upload to TestFlight
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      groups: ENV["TESTFLIGHT_GROUPS"]&.split(",") || ["Internal Testers"], # Change this to your TestFlight group name
      api_key: api_key
    )

    # Optional: Add release notes
    # changelog = ENV["CHANGELOG"] || "Bug fixes and improvements"
    # upload_to_testflight(
    #   changelog: changelog
    # )
  end

  desc "Build app only (without uploading)"
  lane :build do
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        signingStyle: "automatic"
      },
      output_directory: "./build",
      output_name: "Depozio.ipa",
      clean: true
    )
  end

  desc "Upload existing build to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false
    )
  end
end

