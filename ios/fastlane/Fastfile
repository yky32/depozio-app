# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API authentication
    if ENV["APP_STORE_CONNECT_API_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        duration: 1200, # 20 minutes
        in_house: false
      )
    end

    # Build archive with Flutter (no signing), then export with Fastlane (App Store signing)
    team_id = ENV["TEAM_ID"] || "3G34999H3A"
    project_root = File.expand_path('../..', __dir__)
    
    # Step 1: Build archive using Flutter without code signing
    UI.message("Building archive with Flutter (no signing)...")
    sh("cd #{project_root} && flutter build ios --release --no-codesign")
    
    # Step 2: Find the archive
    archive_path = Dir.glob("#{project_root}/build/ios/archive/Runner.xcarchive").first
    
    if archive_path.nil? || !File.exist?(archive_path)
      # Try alternative location
      archive_path = Dir.glob("#{project_root}/build/ios/*.xcarchive").first
    end
    
    if archive_path.nil? || !File.exist?(archive_path)
      UI.user_error!("Could not find archive file. Build may have failed. Check Flutter build logs above.")
    end
    
    UI.message("Found archive at: #{archive_path}")
    
    # Step 3: Export IPA with App Store signing using Fastlane
    UI.message("Exporting IPA with App Store signing...")
    export_options_path = File.expand_path('../export_options.plist', __dir__)
    
    # Create export_options.plist with App Store signing
    File.write(export_options_path, <<~PLIST
      <?xml version="1.0" encoding="UTF-8"?>
      <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
      <plist version="1.0">
      <dict>
        <key>method</key>
        <string>app-store</string>
        <key>signingStyle</key>
        <string>automatic</string>
        <key>teamID</key>
        <string>#{team_id}</string>
        <key>uploadBitcode</key>
        <false/>
        <key>uploadSymbols</key>
        <true/>
        <key>compileBitcode</key>
        <false/>
      </dict>
      </plist>
    PLIST
    )
    
    # Export the IPA using xcodebuild with proper signing
    export_path = "./build"
    FileUtils.mkdir_p(export_path)
    
    sh("xcodebuild -exportArchive -archivePath '#{archive_path}' -exportOptionsPlist '#{export_options_path}' -exportPath '#{export_path}' -allowProvisioningUpdates")
    
    # Find the exported IPA
    ipa_path = Dir.glob("#{export_path}/*.ipa").first
    
    if ipa_path.nil? || !File.exist?(ipa_path)
      UI.user_error!("Could not find exported IPA file. Export may have failed.")
    end
    
    # Rename to expected name
    final_ipa_path = "#{export_path}/Depozio.ipa"
    FileUtils.mv(ipa_path, final_ipa_path) if ipa_path != final_ipa_path
    
    UI.success("IPA created successfully at #{final_ipa_path}")

    # Upload to TestFlight
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      groups: ENV["TESTFLIGHT_GROUPS"]&.split(",") || ["Internal Testers"], # Change this to your TestFlight group name
      api_key: api_key
    )

    # Optional: Add release notes
    # changelog = ENV["CHANGELOG"] || "Bug fixes and improvements"
    # upload_to_testflight(
    #   changelog: changelog
    # )
  end

  desc "Build app only (without uploading)"
  lane :build do
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        signingStyle: "automatic"
      },
      output_directory: "./build",
      output_name: "Depozio.ipa",
      clean: true
    )
  end

  desc "Upload existing build to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false
    )
  end
end

