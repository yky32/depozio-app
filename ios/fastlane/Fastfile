# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API authentication
    if ENV["APP_STORE_CONNECT_API_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        duration: 1200, # 20 minutes
        in_house: false
      )
    end

    # Use xcodebuild to archive and export with App Store signing
    team_id = ENV["TEAM_ID"] || "3G34999H3A"
    
    # Create export_options.plist with App Store signing
    export_options_path = File.expand_path('../export_options.plist', __dir__)
    File.write(export_options_path, <<~PLIST
      <?xml version="1.0" encoding="UTF-8"?>
      <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
      <plist version="1.0">
      <dict>
        <key>method</key>
        <string>app-store</string>
        <key>signingStyle</key>
        <string>automatic</string>
        <key>teamID</key>
        <string>#{team_id}</string>
        <key>uploadBitcode</key>
        <false/>
        <key>uploadSymbols</key>
        <true/>
        <key>compileBitcode</key>
        <false/>
      </dict>
      </plist>
    PLIST
    )
    
    # Archive with development signing (Xcode can do this automatically), then export with App Store signing
    UI.message("Archiving app with automatic signing...")
    
    # Get absolute paths (we're in ios/fastlane, so go up one level to ios/)
    ios_dir = File.expand_path('..', __dir__)
    workspace_path = File.expand_path('Runner.xcworkspace', ios_dir)
    
    unless File.exist?(workspace_path)
      UI.user_error!("Workspace not found at: #{workspace_path}")
    end
    
    # Create archive directory
    archive_dir = "#{Dir.home}/Library/Developer/Xcode/Archives/#{Time.now.strftime('%Y-%m-%d')}"
    FileUtils.mkdir_p(archive_dir)
    archive_name = "Depozio #{Time.now.strftime('%Y-%m-%d %H.%M.%S')}"
    archive_path = "#{archive_dir}/#{archive_name}.xcarchive"
    
    # Archive - Xcode will use development signing automatically, but export will re-sign with App Store
    sh("cd '#{ios_dir}' && xcodebuild archive -workspace Runner.xcworkspace -scheme Runner -configuration Release -archivePath '#{archive_path}' -allowProvisioningUpdates CODE_SIGN_STYLE=Automatic DEVELOPMENT_TEAM=#{team_id} 2>&1 | xcbeautify")
    
    unless File.exist?(archive_path)
      UI.user_error!("Archive failed. Check build logs above.")
    end
    
    UI.message("Archive created at: #{archive_path}")
    
    # Export with App Store signing (this will re-sign the app with App Store distribution)
    UI.message("Exporting IPA with App Store signing...")
    export_path = File.expand_path('./build', __dir__)
    FileUtils.mkdir_p(export_path)
    
    sh("xcodebuild -exportArchive -archivePath '#{archive_path}' -exportOptionsPlist '#{export_options_path}' -exportPath '#{export_path}' -allowProvisioningUpdates 2>&1")
    
    # Find and rename the exported IPA
    ipa_path = Dir.glob("#{export_path}/*.ipa").first
    
    if ipa_path.nil? || !File.exist?(ipa_path)
      UI.user_error!("Could not find exported IPA file. Export may have failed. Check logs above.")
    end
    
    final_ipa_path = "#{export_path}/Depozio.ipa"
    FileUtils.mv(ipa_path, final_ipa_path) if ipa_path != final_ipa_path
    
    UI.success("IPA created successfully at #{final_ipa_path}")

    # Upload to TestFlight
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      groups: ENV["TESTFLIGHT_GROUPS"]&.split(",") || ["Internal Testers"], # Change this to your TestFlight group name
      api_key: api_key
    )

    # Optional: Add release notes
    # changelog = ENV["CHANGELOG"] || "Bug fixes and improvements"
    # upload_to_testflight(
    #   changelog: changelog
    # )
  end

  desc "Build app only (without uploading)"
  lane :build do
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        signingStyle: "automatic"
      },
      output_directory: "./build",
      output_name: "Depozio.ipa",
      clean: true
    )
  end

  desc "Upload existing build to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false
    )
  end
end

