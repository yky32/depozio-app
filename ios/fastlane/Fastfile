# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Set up App Store Connect API authentication
    if ENV["APP_STORE_CONNECT_API_KEY_ID"] && ENV["APP_STORE_CONNECT_ISSUER_ID"] && ENV["APP_STORE_CONNECT_API_KEY_PATH"]
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
        duration: 1200, # 20 minutes
        in_house: false
      )
    end

    # Build using Flutter's build command (handles signing automatically)
    # This is more reliable for CI/CD as Flutter manages the build process
    team_id = ENV["TEAM_ID"] || "3G34999H3A"
    
    # Update export_options.plist with the correct team ID
    export_options_path = File.expand_path('../export_options.plist', __dir__)
    if File.exist?(export_options_path)
      # Read and update team ID in plist
      content = File.read(export_options_path)
      content.gsub!(/<string>3G34999H3A<\/string>/, "<string>#{team_id}</string>")
      File.write(export_options_path, content)
    end
    
    # Build IPA using Flutter (this handles code signing automatically)
    sh("cd .. && flutter build ipa --release --export-options-plist=#{export_options_path}")
    
    # Find the generated IPA
    ipa_path = Dir.glob("../build/ios/ipa/*.ipa").first
    
    if ipa_path.nil? || !File.exist?(ipa_path)
      UI.user_error!("Could not find IPA file. Searched in: ../build/ios/ipa/")
    end
    
    # Copy to build directory for consistency
    FileUtils.mkdir_p("./build")
    FileUtils.cp(ipa_path, "./build/Depozio.ipa")

    # Upload to TestFlight
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      groups: ENV["TESTFLIGHT_GROUPS"]&.split(",") || ["Internal Testers"], # Change this to your TestFlight group name
      api_key: api_key
    )

    # Optional: Add release notes
    # changelog = ENV["CHANGELOG"] || "Bug fixes and improvements"
    # upload_to_testflight(
    #   changelog: changelog
    # )
  end

  desc "Build app only (without uploading)"
  lane :build do
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        signingStyle: "automatic"
      },
      output_directory: "./build",
      output_name: "Depozio.ipa",
      clean: true
    )
  end

  desc "Upload existing build to TestFlight"
  lane :upload do
    upload_to_testflight(
      ipa: "./build/Depozio.ipa",
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false
    )
  end
end

